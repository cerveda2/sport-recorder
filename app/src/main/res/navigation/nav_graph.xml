<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="cz.dcervenka.sportrecorder.ui.SportListFragment"
        android:label="@string/list_fragment_label"
        tools:layout="@layout/fragment_sport_list">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="cz.dcervenka.sportrecorder.ui.SportCreateFragment"
        android:label="@string/create_sport_fragment_label"
        tools:layout="@layout/fragment_sport_create">
    </fragment>
</navigation>